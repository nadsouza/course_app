<% if (@courses.present?) %>
  <h1 class="margin-bottom-three">All Courses</h1>
  <p class="lead">List of all courses available. There are a total of <%= @courses.count %> courses shown below.</p>
  <%= render 'shared/courses', courses: @courses %>
<% else %>
  <%= render 'shared/error_page', heading: 'Courses Not Found', message: 'Cannot find any courses within the application. Please create one by logging in as a user.' %>
<% end %>